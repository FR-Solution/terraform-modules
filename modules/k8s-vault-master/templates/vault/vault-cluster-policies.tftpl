path "auth/${k8s_global_vars.global_path.base_vault_path_approle}/login" {
  capabilities = [ "update" ]
}

path "auth/token/renew" {
    capabilities = ["update"]
}

path "auth/token/renew-self" {
    capabilities = ["update"]
}

path "${k8s_global_vars.ssl.intermediate.kubernetes-ca.default.path}/sign/${issuer_name}" {
    capabilities = ["update"]
}

path "${k8s_global_vars.ssl.intermediate.kubernetes-ca.default.path}/${issuer_name}/certs" {
    capabilities = ["list"]
}
