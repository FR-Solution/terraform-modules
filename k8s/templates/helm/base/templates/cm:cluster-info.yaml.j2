apiVersion: v1
kind: ConfigMap
metadata:
    name: cluster-info
    namespace: kube-public
data:
    kubeconfig: |
        apiVersion: v1
        clusters:
        - cluster:
            certificate-authority-data: {{ .Values.base64_certificate_authority_data}}
            server: https://{{ .Values.kube_apiserver_lb_access }}
        name: ""
        contexts: null
        current-context: ""
        kind: Config
        preferences: {}
        users: null